{
  "name": "vue-boilerplate",
  "version": "1.6.1",
  "description": "Grabarz & Partner Boilerplate",
  "author": "Stephan Gerbeth",
  "license": "MIT",
  "main": "index.js",
  "standard-version": {
    "scripts": {
      "postcommit": "git commit --amend -m \"$(git log -1 --pretty=%B) [ci skip]\""
    }
  },
  "scripts": {
    "postinstall": "npm run favicon",
    "test": "npm run lint",
    "dev": "cross-env NODE_ENV=development node ./env/nuxt/server.js",
    "build": "cross-env NODE_ENV=build nuxt build --config-file env/nuxt/config.js",
    "start": "cross-env NODE_ENV=production node ./env/nuxt/server.js",
    "static": "npm run build && cross-env NODE_ENV=static nuxt generate --config-file env/nuxt/config.js",
    "lint:es": "eslint --fix --ext .js,.vue --ext .json --ignore-path .gitignore ./",
    "lint:css": "npx stylelint 'src/**/*.vue'",
    "lint": "npm run lint:es && npm run lint:css",
    "browserslist": "npx browserslist",
    "favicon": "node ./env/tools/favicons.js",
    "release": "standard-version",
    "wdio": "npx wdio ./test/wdio/wdio.conf.js",
    "wdio-local": "npx wdio ./test/wdio/wdio.conf.local.js",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-vue-app": "^2.0.0",
    "browserslist-saucelabs": "^0.3.0",
    "chai": "^4.1.2",
    "cheerio": "^1.0.0-rc.2",
    "chromedriver": "^2.40.0",
    "cross-env": "^5.2.0",
    "deepmerge": "^2.1.1",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-html-reporter": "^0.5.2",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^4.7.0",
    "favicons": "^5.1.1",
    "fs-extra": "^7.0.0",
    "geckodriver": "^1.11.0",
    "httpolyglot": "^0.1.2",
    "husky": "^0.14.3",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-webp": "^4.1.0",
    "imagemin-webpack-plugin": "^2.1.5",
    "mocha": "^5.2.0",
    "mocha-htmllint": "^1.4.2",
    "node-notifier": "^5.2.1",
    "npm-audit-html": "^1.1.0",
    "opn": "^5.3.0",
    "parallel-mocha": "0.0.7",
    "postcss-modules": "^1.3.0",
    "postcss-nested": "^3.0.0",
    "postcss-normalize": "^6.0.0",
    "rucksack-css": "^1.0.2",
    "selenium-standalone": "^6.15.1",
    "standard-version": "^4.4.0",
    "strip-ansi": "^4.0.0",
    "stylelint": "^9.3.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "svg-sprite-loader": "^3.9.0",
    "svgo": "^1.0.5",
    "svgo-loader": "^2.1.0",
    "text-table": "^0.2.0",
    "validate-commit-msg": "^2.14.0",
    "wdio-mocha-framework": "^0.6.2",
    "wdio-sauce-service": "^0.4.10",
    "wdio-screenshot": "^0.6.0",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.13.1",
    "webpack-monitor": "^1.0.14",
    "webpack-virtual-modules": "^0.1.10"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.1",
    "nuxt": "^1.4.1",
    "vue-i18n": "^8.0.0",
    "vue-i18n-extensions": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrabarzUndPartner/gp-vue-boilerplate.git"
  }
}
